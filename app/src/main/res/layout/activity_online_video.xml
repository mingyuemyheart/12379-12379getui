<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="vertical" >

            <SurfaceView
                android:id="@+id/surfaceView"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/reTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:background="@drawable/bg_video_top_controller" >

            <ImageView
                android:id="@+id/ivBackLand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/iv_back_white" />

            <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivBackLand"
                android:textColor="@color/white"
                android:textSize="@dimen/level_4" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reBottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/llSurfaceView"
            android:background="@drawable/bg_video_bottom_controller" >

            <TextView
                android:id="@+id/tvStartTimeLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:text="00:00"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />

            <SeekBar
                android:id="@+id/seekBarLand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvEndTimeLand"
                android:layout_toRightOf="@+id/tvStartTimeLand"
                android:maxHeight="2dip"
                android:minHeight="2dip"
                android:progress="0"
                android:thumbOffset="0dp"
                android:progressDrawable="@drawable/seekbar_drawable"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/tvEndTimeLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/ivInFull"
                android:text="00:00"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />

            <ImageView
                android:id="@+id/ivInFull"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:padding="8dp"
                android:src="@drawable/iv_out_full" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivPlayLand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/iv_play"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.ProgressBar"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re1"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/llPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color4"
                android:textSize="@dimen/level_5" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color4"
                android:textSize="@dimen/level_5" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color4"
                android:textSize="@dimen/level_5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/ivPortrait"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/iv_portrait" />

                <TextView
                    android:id="@+id/tvNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/ivPortrait"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/level_4" />

                <TextView
                    android:id="@+id/tvPlayCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/ivPraise"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <ImageView
                    android:id="@+id/ivPraise"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tvPraise"
                    android:padding="7.5dp"
                    android:src="@drawable/iv_unlike" />

                <TextView
                    android:id="@+id/tvPraise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/ivShare"
                    android:text="0"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_5" />

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="7.5dp"
                    android:src="@drawable/iv_share2" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvCommentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llPosition"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_4" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llSubmit"
            android:layout_below="@+id/tvCommentCount"
            android:cacheColorHint="@color/transparent"
            android:divider="#dedede"
            android:dividerHeight="0.2dip"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/llSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_comment"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <EditText
                    android:id="@+id/etComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="写评论..."
                    android:maxLines="5"
                    android:textColor="@color/text_color4"
                    android:textColorHint="@color/text_color2"
                    android:textSize="@dimen/level_4" />

                <ImageView
                    android:id="@+id/ivClear"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iv_clear"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dip"
                android:background="@drawable/selector_login"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="@dimen/level_4"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>