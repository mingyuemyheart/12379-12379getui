<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shawn_bg_login"
    android:orientation="vertical" >

    <include
        android:id="@+id/reTitle"
        layout="@layout/shawn_layout_title" />

    <RelativeLayout
        android:id="@+id/reUserName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/level_2"
            android:layout_height="@dimen/level_2"
            android:layout_centerVertical="true"
            android:src="@drawable/iv_user" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/ivUser"
            android:background="@color/transparent"
            android:hint="请输入手机号码"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#a0ffffff"
            android:textColorHint="#a0ffffff"
            android:textSize="@dimen/level_4" />
    </RelativeLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/llPwd"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:background="#30ffffff" />

    <LinearLayout
        android:id="@+id/llPwd"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/level_2"
            android:layout_height="@dimen/level_2"
            android:src="@drawable/iv_pwd" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入手机验证码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#a0ffffff"
            android:textColorHint="#a0ffffff"
            android:textSize="@dimen/level_4" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="#30ffffff" />

        <TextView
            android:id="@+id/tvSend"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/selector_send"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/level_5" />
    </LinearLayout>

    <TextView
        android:id="@+id/line2"
        android:layout_above="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:background="#30ffffff" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/selector_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/level_3" />

</RelativeLayout>