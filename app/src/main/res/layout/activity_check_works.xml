<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/reTitle"
        layout="@layout/shawn_layout_title" />

    <LinearLayout
        android:id="@+id/llCheck"
        android:layout_below="@+id/reTitle"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="30dp"
        android:gravity="center_vertical|center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/bg_check_selected" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_upload_selected"
            android:gravity="center"
            android:text="未审核"
            android:textColor="@color/white"
            android:textSize="@dimen/level_4" />
        
        <TextView 
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/blue"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="90dp"
            android:layout_height="28.5dp"
            android:gravity="center"
            android:text="审核通过"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/level_4" />
        
        <TextView 
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/blue"/>
        
        <TextView
            android:id="@+id/tv3"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="审核拒绝"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/level_4" />
    </LinearLayout>

    <TextView
        android:id="@+id/divider"
        android:layout_below="@+id/llCheck"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray" />

    <com.warning.view.MainViewPager
        android:layout_below="@+id/divider"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</RelativeLayout>